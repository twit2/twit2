{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Twit2 API gateway (v1)",
  "timeout": "5000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8090,
  "endpoints": [
    {
      "endpoint": "/api/v1/auth/login",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/login",
          "encoding": "no-op",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://host.docker.internal:3200"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_headers": [
        "Authorization",
        "Content-Type",
        "Content-Length"
      ]
    },
    {
      "endpoint": "/api/v1/auth/register",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/register",
          "encoding": "no-op",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://host.docker.internal:3200"
          ],
          "disable_host_sanitize": false,
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ],
      "input_headers": [
        "Authorization",
        "Content-Type",
        "Content-Length"
      ]
    },
    {
      "endpoint": "/api/v1/auth/verify",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/verify",
          "encoding": "no-op",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://host.docker.internal:3200"
          ],
          "disable_host_sanitize": false,
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ],
      "input_headers": [
        "Authorization",
        "Content-Type",
        "Content-Length"
      ]
    },
    {
      "endpoint": "/api/v1/user/@me",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/@me",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:3201"
          ],
          "disable_host_sanitize": false,
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ],
      "input_headers": [
        "Authorization",
        "Content-Type",
        "Content-Length"
      ]
    },
    {
      "endpoint": "/api/v1/user/{id}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{id}",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:3201"
          ],
          "disable_host_sanitize": false,
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ],
      "input_headers": [
        "Authorization",
        "Content-Type",
        "Content-Length"
      ]
    }
  ]
}