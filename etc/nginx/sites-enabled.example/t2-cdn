# CDN File

server {
    listen 80;
    listen [::]:80;

    server_name cdn.tw2-app.local;

    # Comment out when certificate has been acquired
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name cdn.tw2-app.local;

    # Uncomment when certificate has been acquired
    # ssl_certificate /etc/nginx/ssl/live/cdn.tw2-app.local/fullchain.pem;
    # ssl_certificate_key /etc/nginx/ssl/live/cdn.tw2-app.local/privkey.pem;

    location / {
        proxy_set_header Host $host;
        proxy_pass http://host.docker.internal:3400;
    }
}